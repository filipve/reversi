<Window x:Class="ReversiMooieVersie20april2015.View.AboutStuff.AboutWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Sudoku WPF"
        Width="350"
        Height="250"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
    </Window.Resources>


    <StackPanel>
        <TextBlock FontSize="24"
                   Padding="10"
                   Text="Sudoku WPF" />
        <TextBlock Text="Written by Han Hung" />
        <TextBlock Text="Copyright (c) 2014 Han Hung" />
        <TextBlock Margin="10"
                   Text="This software is copyrighted and released under the GNU General Public License v3."
                   TextWrapping="Wrap" />

        <Button Width="75"
                Margin="10"
                Click="OKButton_Click"
                Content="OK" />
    </StackPanel>
</Window>